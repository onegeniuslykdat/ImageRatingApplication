@using ImageRatingPortal.Components

@if (hasUserSeenImage)
{
    <h1 class="text-center">Previously Seen Image</h1>
}
else
{
    <h1 class="text-center">Rate New Image</h1>
}

<br/>

<div class="card" style="width:100%">
    <img src=@Source class="card-img-top" style="margin-left:auto; margin-right:auto; display:block; width:50%" alt="">

    @if(hasUserSeenImage)
    {
        <PreviouslySeen ImageID=@ImageID />
    }
    else
    {
        <LikeDislike ImageID=@ImageID />
    }    
</div>

